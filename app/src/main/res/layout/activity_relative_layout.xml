<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="false"
    android:layout_alignParentEnd="false"
    >
    <TextView
        android:id="@+id/text_view3"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_above="@id/text_view2"
        android:layout_alignParentEnd="false"
        android:layout_toEndOf="@id/text_view1"
        android:padding="10dp"
        android:background="@android:color/holo_red_dark"
        android:text="Texto Tres"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"

        />
    <TextView
        android:id="@+id/text_view1"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:padding="10dp"
        android:background="@color/black"
        android:text="Texto Uno"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="visible"
        />
    <TextView
        android:id="@+id/text_view2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view1"
        android:padding="10dp"
        android:background="@android:color/holo_blue_light"
        android:text="Texto Dos ssdfsdfsfsdsdfsdfsdfsdfsfdsdf sdfsfssdf"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        />
    <LinearLayout
        android:id="@+id/linear_layout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/rojo_fuerte"
            android:text="Texto Cuatro"
            android:textSize="24sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_orange_light"
            android:text="Texto Cinco"
            android:textSize="24sp"
            />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:background="@color/black"
        android:text="22"
        android:textSize="60sp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        />
</RelativeLayout>
